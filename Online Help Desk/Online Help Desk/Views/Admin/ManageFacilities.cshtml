<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="~/Admin/style.css">
</head>
<body>
    <div class="sidenav">
        <h2>Admin Panel</h2>
        <a href="@Url.Action("Dashboard", "Admin")">Dashboard</a>
        <a href="@Url.Action("ManageRequests", "Admin")">Manage Requests</a>
        <a href="@Url.Action("ManageUsers", "Admin")">Manage Users</a>
        <a href="@Url.Action("ManageFacilityHead", "Admin")">Manage Facility Head</a>
        <a href="@Url.Action("ManageFacilities", "Admin")" class="active">Manage Facilities</a>
        <a href="@Url.Action("Logout", "Auth")">Logout</a>
    </div>

    <div class="main-content">
        <div class="topbar">
            <span class="username">Welcome, Admin</span>
            <label class="switch">
                <input type="checkbox" id="theme-toggle">
                <span class="slider"></span>
            </label>
        </div>

        <div class="stats">
            <div class="card">
                <h3>Total Users</h3>
                <p>1,245</p>
            </div>
            <div class="card">
                <h3>Active Requests</h3>
                <p>87</p>
            </div>
            <div class="card">
                <h3>Pending Approvals</h3>
                <p>23</p>
            </div>
            <div class="card">
                <h3>Resolved Issues</h3>
                <p>542</p>
            </div>
        </div>

        <h2>Recent Requests</h2>
        <div class="export-buttons">
            <button onclick="exportToPDF('requests-table')">Export to PDF</button>
            <button onclick="exportToExcel()">Export to Excel</button>
        </div>

        <table id="requests-table">
            <thead>
                <tr>
                    <th onclick="sortTable(0)">FacilityId</th>
                    <th onclick="sortTable(1)">Name</th>
                    <th onclick="sortTable(3)">Location</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>REQ-1024</td>
                    <td>John Smith</td>
                    <td>Library</td>
                </tr>
                <tr>
                    <td>REQ-1023</td>
                    <td>Alice Johnson</td>
                    <td>2023-05-15</td>
                </tr>
                <tr>
                    <td>REQ-1022</td>
                    <td>Bob Williams</td>
                    <td>Pending</td>
                </tr>
                <tr>
                    <td>Sarah Davis</td>
                    <td>2023-05-14</td>
                    <td>Computer Lab</td>
                </tr>
                <tr>
                    <td>REQ-1020</td>
                    <td>Michael Brown</td>
                    <td>Completed</td>
                </tr>
            </tbody>
        </table>
    </div>


    <script src="~/Admin/script.js"></script>
</body>
</html>
