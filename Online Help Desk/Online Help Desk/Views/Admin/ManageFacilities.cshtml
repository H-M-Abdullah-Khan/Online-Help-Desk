<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="~/Admin/style.css">
</head>
<body>
    <div class="sidenav">
        <h2>Admin Panel</h2>
        <a href="@Url.Action("Dashboard", "Admin")">Dashboard</a>
        <a href="@Url.Action("ManageRequests", "Admin")">Manage Requests</a>
        <a href="@Url.Action("ManageUsers", "Admin")">Manage Users</a>
        <a href="@Url.Action("ManageFacilityHead", "Admin")">Manage Facility Head</a>
        <a href="@Url.Action("ManageFacilities", "Admin")" class="active">Manage Facilities</a>
        <a href="@Url.Action("Approvals", "Admin")">Registration Requests</a>
        <a href="@Url.Action("Logout", "Auth")">Logout</a>
    </div>

    <div class="main-content">
        <div class="topbar">
            <span class="username">Welcome, Admin</span>
            <label class="switch">
                <input type="checkbox" id="theme-toggle">
                <span class="slider"></span>
            </label>
        </div>

        <div class="stats">
            <div class="card">
                <h3>Total Facilities</h3>
                <p>@ViewBag.TotalFacilities</p>
            </div>
            <div class="card">
                <h3>Assigned Requests</h3>
                <p>@ViewBag.FacilityRequests</p>
            </div>
            <div class="card">
                <h3>Unique Locations</h3>
                <p>@ViewBag.UniqueLocations</p>
            </div>
            <div class="card">
                <h3>Facilities with No Requests</h3>
                <p>@ViewBag.UnusedFacilities</p>
            </div>
        </div>


        <h2>Manage Facilities</h2>
        <div class="export-buttons">
            <button onclick="exportToPDF('requests-table')">Export to PDF</button>
            <button onclick="exportToExcel()">Export to Excel</button>
        </div>

        <table id="requests-table">
            <thead>
                <tr>
                    <th onclick="sortTable(0)">Facility ID</th>
                    <th onclick="sortTable(1)">Name</th>
                    <th onclick="sortTable(2)">Location</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var f in Model)
                {
                    <tr>
                        <td>@f.FacilityId</td>
                        <td>@f.Name</td>
                        <td>@f.Location</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    <script src="~/Admin/script.js"></script>
</body>
</html>
